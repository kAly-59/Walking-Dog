{% extends 'base.html.twig' %}

{% block body %}

<head>

	<title>
		{% block title %}Ajouter une plage
		{% endblock %}
	</title>
	<!-- Fichiers CSS -->
	<link rel="stylesheet" href="{{ asset ('/css/ajout.lieu.css') }}"/>

</head>


<body>

	<div class="container">
		<div class="text-center offset-md-4">
			<div class="form" style="width:50%;">
				<h1>Ajouter une plage(formulaire HTML)</h1>
				<form action="{{ path('ajout_plage') }}" method="post">
					<div class="form-group">
						<a class="titre_input">
							Nom de la forêt
						</a>
						<input placeholder="Nom de la plage ..." required name="nom" id="nom" type="text" class="form-control">
					</div>
					<div class="form-group">
						<a class="titre_input">
							Les chiens sont-t'il autorisé ?
						</a>
						<select label="Les chiens sont-t'il autorisé ?" placeholder="Autorisation..." name="autorisation" id="autorisation">
							<option value=""></option>
							<option value="oui">Oui</option>
							<option value="non">Non</option>
						</select>
					</div>
					<div class="form-group">
						<button type="submit" class="btn">Valider</button>
					</div>
				</form>
			</div>
		</div>
	</div>

</body>

{{ form_start (formPlage)}}
<div class="container">
	<div class="text-center offset-md-4">
		<div class="form" style="width:50%;">
			<h1>Ajouter une plage(formulaire TWIG)
			</h1>
			<br>
			{{ form_row(formPlage.nom, {'label': 'Nom de la lpage','attr': {'placeholder': 'Nom de la plage ...'}}) }}
			{# {{ form_row(formHotel.lat, {'label': 'Mot de passe','attr': {'placeholder': 'Mot de passe'}}) }}
									            {{ form_row(formHotel.lon, {'label': 'Confirmer le mot de passe','attr': {'placeholder': 'Confirmer le mot de passe...'}}) }} #}

			{{ form_row(formPlage.autorisation, {'label': 'Les chiens sont-t\'il autorisé ?'}) }}
            <button type="submit" class="btn">Valider</button>
            {{ form_end(formPlage) }}
        </div>
    </div>
</div>
{{ form_end (formPlage)}} 

{% endblock %}

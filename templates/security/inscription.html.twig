{% extends 'base.html.twig' %}

{% block body %}

<head>

    <title>
        {% block title %}Inscription
        {% endblock %}
    </title>
    <!-- Fichiers CSS -->
    <link rel="stylesheet" href="{{ asset ('/css/inscription.css') }}" />

</head>

<body>

    <div class="container">
        <div class="offset-md-1">
            {{ form_start(form) }}
            <div class="form" style="width:90%;">
                <h1>Inscription</h1>
                <div class="form-group">
                    {{ form_row(form.username, {'label': 'Nom d\'utilisateur','attr': {'placeholder': 'Nom d\'utilisateur...'}})}}
                </div>
                <div class="form-group">
                    {{ form_row(form.password, {'label': 'Mot de passe','attr': {'placeholder': 'Mot de passe...'}}) }}
                </div>
                {{ form_row(form.confirm_password, {'label': 'Confirmer le mot de passe','attr': {'placeholder': 'Confirmer le mot de passe...'}})}}
                <div class="form-group">
                    {{ form_row(form.email, {'label': 'Adresse email','attr': {'placeholder': 'Adresse email...'}}) }}
                </div>
                {{ form_widget(form.valider, { 'attr': {'class': 'btn', 'type': 'button' }}) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

</body>

{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Camping index{% endblock %}

{% block body %}
    <h1>Camping index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Autorisation</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>CodePostal</th>
                <th>Ville</th>
                <th>Lat</th>
                <th>Lon</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for camping in campings %}
            <tr>
                <td>{{ camping.id }}</td>
                <td>{{ camping.autorisation }}</td>
                <td>{{ camping.nom }}</td>
                <td>{{ camping.adresse }}</td>
                <td>{{ camping.codePostal }}</td>
                <td>{{ camping.ville }}</td>
                <td>{{ camping.lat }}</td>
                <td>{{ camping.lon }}</td>
                <td>{{ camping.type }}</td>
                <td>
                    <a href="{{ path('camping_show', {'id': camping.id}) }}">show</a>
                    <a href="{{ path('camping_edit', {'id': camping.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('camping_new') }}">Create new</a>
{% endblock %}
